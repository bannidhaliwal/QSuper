<div class="container containerExtensionForContentArea linearGradient">
  <div class="container loginBox">
    <div class = "container loginBoxTitleSmallCharacters">
      <p>Welcome to</p>
    </div>
    <div class = "container loginBoxTitleBigCharacters">
      <h1>QSuper Website</h1>
    </div>
    <div class = "loginPageAlertBox">
      <% if(locals.session.error == true){
        %><label><%=locals.session.errorMessage%></label><%
      }%>
    </div>
    <form name = "loginForm" method = "post" action="/login">
      <div class ="container" style="width:100%;height:15%;margin-top:3%;">
        <input id = "x" type="text" name = "userName" class="form-control loginPageUserNameInputBox" placeholder="User Name">
        <input type="password" name = "password" class="form-control loginPagePasswordInputBox" placeholder="Password">
        <button type="submit" class="btn-primary loginPageSubmitButton">Submit &#x2192</button>
      </div>
    </form>
    <div class ="container loginPageBottomRegisterationLink">
      Not Registered?
    </div>
    <div class ="container loginPageBottomRegisterationLink2">
      <a href="register">Register</a>
    </div>
  </div>
</div>
